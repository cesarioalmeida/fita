<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/fita.ui;component/Themes/Theme.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="H1" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Roboto Condensed" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Margin" Value="5,0" />
    </Style>

    <Style x:Key="ActionButton" TargetType="dx:SimpleButton">
        <Setter Property="Padding" Value="20,0" />
        <Setter Property="Margin" Value="4,0" />
        <Setter Property="Height" Value="25" />
        <Setter Property="Background" Value="{StaticResource White1Brush}" />
        <Setter Property="CornerRadius" Value="4" />
    </Style>

    <Style TargetType="dxg:GridControl">
        <Setter Property="FontFamily" Value="Roboto" />
        <Setter Property="FontSize" Value="13" />
    </Style>

</ResourceDictionary>