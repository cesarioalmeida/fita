<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:dx="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/fita.ui;component/Themes/Theme.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <Style x:Key="H1" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Roboto Condensed" />
        <Setter Property="FontSize" Value="20" />
        <Setter Property="Margin" Value="5,0" />
    </Style>

    <Style x:Key="H2" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Roboto" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontWeight" Value="SemiBold" />
        <Setter Property="Margin" Value="10,8,10,5" />
    </Style>

    <Style x:Key="ActionButton" TargetType="dx:SimpleButton">
        <Setter Property="Padding" Value="20,0" />
        <Setter Property="Margin" Value="4,0" />
        <Setter Property="Height" Value="25" />
        <Setter Property="Background" Value="{StaticResource White1Brush}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="CornerRadius" Value="12" />
    </Style>

    <Style TargetType="dxg:GridControl">
        <Setter Property="FontFamily" Value="Roboto" />
        <Setter Property="FontSize" Value="15" />
        <Setter Property="SelectionMode" Value="Cell" />
        <Setter Property="ClipboardCopyMode" Value="ExcludeHeader" />
    </Style>

    <Style x:Key="HomeSectionBorder" TargetType="Border">
        <Setter Property="Margin" Value="4,4,0,0" />
        <Setter Property="Background" Value="#eee" />
        <Setter Property="CornerRadius" Value="0" />
    </Style>

    <Style x:Key="HomeSectionLine" TargetType="Line">
        <Setter Property="Stretch" Value="Uniform" />
        <Setter Property="VerticalAlignment" Value="Center" />
        <Setter Property="Opacity" Value="0.5" />
        <Setter Property="Stroke" Value="Black" />
        <Setter Property="StrokeThickness" Value="0.5" />
        <Setter Property="SnapsToDevicePixels" Value="True" />
        <Setter Property="UseLayoutRounding" Value="True" />
        <Setter Property="X1" Value="0" />
        <Setter Property="X2" Value="1" />
        <Setter Property="Y1" Value="0" />
        <Setter Property="Y2" Value="0" />
    </Style>

</ResourceDictionary>