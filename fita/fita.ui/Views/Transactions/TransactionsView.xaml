<UserControl
    x:Class="fita.ui.Views.Transactions.TransactionsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:fita.ui.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dxc="http://schemas.devexpress.com/winfx/2008/xaml/core"
    xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
    xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
    xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
    xmlns:dxmvvm="http://schemas.devexpress.com/winfx/2008/xaml/mvvm"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:transactions="clr-namespace:fita.ui.ViewModels.Transactions"
    x:Name="this"
    d:DataContext="{d:DesignInstance transactions:TransactionsViewModel}"
    DataContext="{dxmvvm:ViewModelSource Type=transactions:TransactionsViewModel}"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/fita.ui;component/Themes/Theme.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <dxc:LoadingDecorator IsSplashScreenShown="{Binding IsBusy}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Border
                Grid.Row="0"
                Height="50"
                Background="{StaticResource BgStartBrush}">

                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Foreground="{StaticResource White1Brush}"
                    Style="{StaticResource H1}"
                    Text="{Binding Account.Name}" />

            </Border>

            <dxg:GridControl
                x:Name="grid"
                Grid.Row="1"
                CurrentItem="{Binding SelectedData}"
                ItemsSource="{Binding Data}">
                <dxg:GridControl.Columns>
                    <dxg:GridColumn
                        Width="50"
                        FieldName="Date"
                        Header="Date">
                        <dxg:GridColumn.EditSettings>
                            <dxe:DateEditSettings />
                        </dxg:GridColumn.EditSettings>
                    </dxg:GridColumn>
                    <dxg:GridColumn FieldName="Description" Header="Description" />
                    <dxg:GridColumn FieldName="Notes" Header="Notes" />
                    <dxg:GridColumn FieldName="Category" Header="Category">
                        <dxg:GridColumn.EditSettings>
                            <dxe:ComboBoxEditSettings
                                DisplayMember="Name"
                                IncrementalFiltering="True"
                                IsTextEditable="True"
                                ItemsSource="{Binding Categories}" />
                        </dxg:GridColumn.EditSettings>
                    </dxg:GridColumn>
                    <dxg:GridColumn
                        Width="70"
                        FieldName="Payment"
                        Header="Payment">
                        <dxg:GridColumn.EditSettings>
                            <dxe:TextEditSettings MaskType="Numeric" MaskUseAsDisplayFormat="True" />
                        </dxg:GridColumn.EditSettings>
                    </dxg:GridColumn>
                    <dxg:GridColumn
                        Width="70"
                        FieldName="Deposit"
                        Header="Deposit">
                        <dxg:GridColumn.CellTemplate>
                            <DataTemplate>
                                <dxe:TextEdit
                                    Name="PART_Editor"
                                    Mask="{DXBinding '@e(this).DataContext.Account.Currency.Prefix + RowData.Row.Deposit + @e(this).DataContext.Account.Currency.Suffix'}"
                                    MaskType="Numeric"
                                    MaskUseAsDisplayFormat="True" />
                            </DataTemplate>
                        </dxg:GridColumn.CellTemplate>
                    </dxg:GridColumn>
                    <dxg:GridColumn
                        Width="70"
                        FieldName="Balance"
                        Header="Balance"
                        ReadOnly="True">
                        <dxg:GridColumn.EditSettings>
                            <dxe:TextEditSettings MaskType="Numeric" MaskUseAsDisplayFormat="True" />
                        </dxg:GridColumn.EditSettings>
                    </dxg:GridColumn>
                </dxg:GridControl.Columns>
                <dxg:GridControl.View>
                    <dxg:TableView
                        AutoWidth="True"
                        NewItemRowPosition="Bottom"
                        RowMinHeight="24"
                        ShowGroupPanel="False"
                        ShowSearchPanelMode="Always" />
                </dxg:GridControl.View>
            </dxg:GridControl>

            <Border
                Grid.Row="2"
                Height="40"
                Background="{StaticResource BgStartBrush}">
                <StackPanel
                    Margin="4"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">
                    <StackPanel.Resources>
                        <Style TargetType="dxc:SimpleButton">
                            <Setter Property="Padding" Value="20,0" />
                            <Setter Property="Margin" Value="4,0" />
                            <Setter Property="Height" Value="25" />
                        </Style>
                    </StackPanel.Resources>
                    <dxc:SimpleButton
                        Background="{StaticResource White1Brush}"
                        Content="Transfer"
                        CornerRadius="4" />
                </StackPanel>
            </Border>

        </Grid>
    </dxc:LoadingDecorator>

</UserControl>