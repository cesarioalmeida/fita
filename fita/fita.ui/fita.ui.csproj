<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net5.0-windows</TargetFramework>
        <UseWPF>true</UseWPF>
        <ApplicationIcon>fita.ico</ApplicationIcon>
    </PropertyGroup>

    <ItemGroup>
      <Page Update="Views\CategoriesView.xaml">
        <SubType>Designer</SubType>
      </Page>
      <Page Update="Views\Currencies\CurrencyDetailsView.xaml">
        <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
        <SubType>Designer</SubType>
      </Page>
      <Page Update="Views\HistoricalData\HistoricalPointView.xaml">
        <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
        <SubType>Designer</SubType>
      </Page>
      <Page Update="Views\HistoricalData\HistoricalDataView.xaml">
        <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
        <SubType>Designer</SubType>
      </Page>
      <Compile Update="Views\CategoriesView.xaml.cs">
        <SubType>Code</SubType>
        <DependentUpon>CategoriesView.xaml</DependentUpon>
      </Compile>
      <Compile Update="Views\Currencies\CurrencyDetailsView.xaml.cs">
        <SubType>Code</SubType>
      </Compile>
      <Compile Update="Views\HistoricalData\HistoricalPointView.xaml.cs">
        <SubType>Code</SubType>
      </Compile>
      <Compile Update="Views\HistoricalData\HistoricalDataView.xaml.cs">
        <SubType>Code</SubType>
      </Compile>
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="DevExpress.WindowsDesktop.Wpf.Grid" Version="20.2.5" />
      <PackageReference Include="DevExpress.WindowsDesktop.Wpf.Themes.All" Version="20.2.5" />
      <PackageReference Include="twentySix.Framework.Core" Version="4.0.3" />
      <PackageReference Include="twentySix.Framework.Theme" Version="4.0.3" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="ddeploy.ico" />
    </ItemGroup>

    <ItemGroup>
      <None Remove="fita.ico" />
      <None Remove="Resources\Categories_32x32.png" />
      <None Remove="Resources\Currency_32x32.png" />
      <None Remove="Resources\Delete_32x32.png" />
      <None Remove="Resources\Refresh_32x32.png" />
      <None Remove="Resources\Settings_32x32.png" />
      <Resource Include="fita.ico" />
      <None Remove="Resources\Add_32x32.png" />
      <Resource Include="Resources\Icons\Add_32x32.png" />
      <Resource Include="Resources\Icons\Categories_32x32.png" />
      <Resource Include="Resources\Icons\Currency_32x32.png" />
      <Resource Include="Resources\Icons\Delete_32x32.png" />
      <Resource Include="Resources\Icons\Refresh_32x32.png" />
      <Resource Include="Resources\Icons\Settings_32x32.png" />
      <None Remove="Resources\Currency_16x16.png" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\fita.common\fita.common.csproj" />
      <ProjectReference Include="..\fita.data\fita.data.csproj" />
      <ProjectReference Include="..\fita.services\fita.services.csproj" />
    </ItemGroup>

    <ItemGroup>
      <Folder Include="Common\" />
    </ItemGroup>

</Project>
